#include "../ft_push_swap.h"

void	ft_pa(t_pw **arr)
{
	t_val *r;

	if (ft_lstvalsize((*(*arr)->b)) != 0)
	{
		r = (*(*arr)->b);
		ft_putstr_fd("THIS IS: ", 1);
		ft_putnbr_fd(r->value, 1);
		ft_putstr_fd("\nStack A SIZE: ", 1);
		ft_putnbr_fd(ft_lstvalsize((*(*arr)->a)), 1);
		ft_lstvaladd_front((*arr)->a, ft_lstvalnew(r->value, r->index));
		(*(*arr)->b) = (*(*arr)->b)->next;
	}
}
